FROM debian:stretch

RUN apt-get update \
	&& apt-get install -y build-essential libcairo2-dev \
	libjpeg62-turbo-dev libpng-dev libossp-uuid-dev libavcodec-dev \
	libavutil-dev libswscale-dev libfreerdp-dev libpango1.0-dev \
	libssh2-1-dev libtelnet-dev libvncserver-dev libpulse-dev \
	libssl-dev libvorbis-dev libwebp-dev \
	net-tools procps